---
interface Props {
  totalProjects: number;
  totalBlogs: number;
  totalWebsites: number;
}

const { totalProjects, totalBlogs, totalWebsites } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">My Services</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 text-center transition-all ">
      <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Applications</h3>
      <p class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">{totalProjects}+</p>
      <p class="text-gray-600 dark:text-gray-300">Custom applications built with modern technologies</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 text-center transition-all ">
      <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Websites</h3>
      <p class="text-4xl font-bold text-green-600 dark:text-green-400 mb-2">{totalWebsites}+</p>
      <p class="text-gray-600 dark:text-gray-300">Beautiful and responsive websites for all devices</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 text-center transition-all ">
      <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Blog Posts</h3>
      <p class="text-4xl font-bold text-purple-600 dark:text-purple-400 mb-2">{totalBlogs}+</p>
      <p class="text-gray-600 dark:text-gray-300">Insightful articles about web development and design</p>
    </div>
  </div>
</section>