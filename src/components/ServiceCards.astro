---
interface Props {
  totalProjects: number;
  totalBlogs: number;
  totalWebsites: number;
  totalSolutions?: number;
}

const { 
  totalProjects, 
  totalBlogs, 
  totalWebsites,
  totalSolutions = 6
} = Astro.props;

const services = [
  {
    title: "Applications",
    count: totalProjects,
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    description: "Custom applications built with modern technologies",
    href: "/archive/?category=Mobile%20Application",
    showPlus: true
  },
  {
    title: "Websites",
    count: totalWebsites,
    icon: "M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9",
    description: "Beautiful and responsive websites for all devices",
    href: "archive/?category=Website",
    showPlus: true
  },
  {
    title: "Blog Posts",
    count: totalBlogs,
    icon: "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z",
    description: "articles about web and Application Development",
    href: "/blogs/",
    showPlus: true
  },
  {
    title: "Solutions",
    count: totalSolutions,
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    description: "Proven solutions to fix common development challenges and errors",
    href: "/blogs/",
    showPlus: false
  }
];
---

<section class="mb-12">
  <h2 class="text-3xl font-bold text-center mb-8 text-black dark:text-white">My Services</h2>
  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6">
    {services.map((service) => (
      <a 
        href={service.href} 
        class="card-base p-4 sm:p-6 text-center hover:scale-[1.02] transition-transform duration-200"
      >
        <div class="w-12 h-12 sm:w-16 sm:h-16 bg-[var(--primary)]/10 dark:bg-[var(--primary)]/20 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="h-6 w-6 sm:h-8 sm:w-8 text-[var(--primary)]" 
            fill="none" 
            viewBox="0 0 24 24" 
            stroke="currentColor"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d={service.icon} 
            />
          </svg>
        </div>
        <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2 text-black dark:text-white">
          {service.title}
        </h3>
        <p class="text-3xl sm:text-4xl font-bold text-[var(--primary)] mb-1 sm:mb-2">
          {service.count}{service.showPlus ? '+' : ''}
        </p>
        <p class="text-sm sm:text-base text-black/80 dark:text-white/80">
          {service.description}
        </p>
      </a>
    ))}
  </div>
</section>